{
  "name": "lms",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services/**/*.service.js",
    "start": "moleculer-runner services/**/*.service.js",
    "find-circular-deps": "madge . -c",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^8.25.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "madge": "^6.1.0",
    "moleculer-repl": "^0.7.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.1",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "moleculer": "^0.14.26",
    "moleculer-auto-openapi": "^1.1.6",
    "moleculer-db": "^0.8.20",
    "moleculer-db-adapter-mongo": "^0.4.15",
    "moleculer-web": "^0.10.4",
    "mongoose": "^8.1.1",
    "nats": "^2.7.1",
    "prom-client": "^12.0.0",
    "socket.io": "^4.7.5",
    "swagger-stats": "^0.99.7"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
